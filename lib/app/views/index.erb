<div class="jumbotron" style="width: 98%">
  <div class="container" style="text-align: center;">
    <h1>Welcome To <br />IdeaBox</h1>
    <p>Where you can safely & securely store your ideas</p>
    <p><a class="btn btn-primary btn-lg">Login In</a>
    <a class="btn btn-primary btn-lg">Sign Up</a></p>
  </div>
</div>
<h3 style="text-align: center">Existings Ideas:</h3>
<% ideas.each do |idea| %>
  <div class="col-lg-4">
    <div class="well well-sm">
      <%= erb :idea, locals: {idea: idea, location: "front_page"}%>
    </div>
  </div>
<% end %>
