<div class="pull-right" style="text-align: right; margin-top: 10px">

  <form action='/<%= idea.id %>/like' method='POST' style="display: inline">
    <button class="btn btn-lg btn-success" type='submit'/>
      Vote Up
    </button>
  </form><br/><br/>

  <form action='/<%= idea.id %>/dislike' method='POST' style="display: inline">
    <button class="btn btn-lg btn-success" type='submit'/>
      Vote Down
    </button>
  </form><br/><br/>

  <form action="/<%= idea.id %>" method="POST" style="display: inline">
    <input class="btn btn-lg btn-warning" type="button" value="Edit" onClick="window.location.href='/<%= idea.id %>/edit'">
    <input type="hidden" name="_method" value="DELETE"><br /><br />
    <input class="btn btn-lg btn-danger" type="submit" value="Delete"/>
  </form><br/>

</div>
